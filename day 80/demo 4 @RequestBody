

------------------------------------------------------------------------------
package com.example.restapi.controller;


import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.restapi.model.Book;

// http://loclahost:4200/books

@RestController
@RequestMapping("books")
public class MyController {

	//http://loclahost:1111/books
	@GetMapping
	public String getData()
	{
		return "My First Rest API get method";
	}
	
	//http://loclahost:1111/books/test
	@GetMapping("/test")
	public String getData1()
	{
		return "My First Rest API get method NEW";
	}

	
	@GetMapping("/get")
	public ResponseEntity<Book> getBook()
	{
		return new ResponseEntity<Book>(new Book("book name",15),HttpStatus.FOUND);
	}

	
	@GetMapping("name/{bookName}")
	public ResponseEntity<String> getBook(@PathVariable String bookName)
	{
		return new ResponseEntity<String>("you search for the book "+bookName,HttpStatus.FOUND);
	}

	
	
	
	//post -> http://loclahost:1111/add
	@PostMapping("/add")
	public ResponseEntity<Book> saveBook(@RequestBody Book book)
	{
		return new ResponseEntity<Book>(book,HttpStatus.OK);
	}
}
