<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<bean id="book" class="org.springcore.demo.model.Book">
<property name="isbn" value="50"></property>
<property name="name" value="My Career"></property>
</bean>


<bean id="library" class="org.springcore.demo.model.Library">
<property name="libraryName" value="City Central Library"></property>

<property name="book">
<bean id="innerBean" class="org.springcore.demo.model.Book">
<property name="isbn" value="150"></property>
<property name="name" value="My Inner Bean"></property>
</bean>
</property>

</bean>



</beans>



-----------------------------------

  package org.springcore.demo.service;

import org.springcore.demo.model.Book;
import org.springcore.demo.model.Library;
import org.springframework.beans.factory.BeanFactory;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class BookService {

	public static void main(String[] args) {
			

		BeanFactory factory=new ClassPathXmlApplicationContext("spring.xml");
		Library library= factory.getBean(Library.class);
		
		System.out.println(library);
	}

}

  
