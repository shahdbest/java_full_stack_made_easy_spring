-------------book

package org.springcore.demo.model;

public class Book {

	private int isbn;
	private String name;
	
	
	public Book() {
		// TODO Auto-generated constructor stub
	}


	public int getIsbn() {
		return isbn;
	}


	public void setIsbn(int isbn) {
		System.out.println("set isbn called= SETTER INJECTION");
		this.isbn = isbn;
	}


	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public Book(int isbn, String name) {
		super();

		System.out.println("const int , string");
		this.isbn = isbn;
		this.name = name;
	}


	@Override
	public String toString() {
		return "Book [isbn=" + isbn + ", name=" + name + "]";
	}
	
	
	
}

---------------spring.xml


  <?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<bean id="book" class="org.springcore.demo.model.Book">
<property name="isbn" value="50"></property>
<property name="name" value="My Career"></property>
</bean>

<bean id="book2" class="org.springcore.demo.model.Book">
<property name="isbn" value="100"></property>
<property name="name" value="My Life"></property>
</bean>

<bean id="book3" class="org.springcore.demo.model.Book">
<constructor-arg value="150"> </constructor-arg>
<constructor-arg value="my Journey"> </constructor-arg>

</bean>



</beans>



  -------------------service

  package org.springcore.demo.service;

import org.springcore.demo.model.Book;
import org.springframework.beans.factory.BeanFactory;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class BookService {

	public static void main(String[] args) {
			
		//Book book=new Book(5,"my life");
		
		//Book book=new Book();
		//book.setIsbn(3);
		//book.setName("some name");

		//System.out.println(book);
	
		BeanFactory factory=new ClassPathXmlApplicationContext("spring.xml");
		//Book book=factory.getBean(Book.class);
		Book book=(Book)factory.getBean("book3");
		System.out.println(book);
	}

}


