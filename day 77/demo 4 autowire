package org.springcore.demo.model;

import java.util.Arrays;

public class Book {

	private int isbn;
	private String name;
	
	

	public Book() {
		// TODO Auto-generated constructor stub
	}



	public int getIsbn() {
		return isbn;
	}



	public void setIsbn(int isbn) {
		System.out.println("setter");
		this.isbn = isbn;
	}



	public String getName() {
		return name;
	}



	public void setName(String name) {
		this.name = name;
	}



	public Book(int isbn, String name) {
		super();
		System.out.println("const");
		this.isbn = isbn;
		this.name = name;
	}



	@Override
	public String toString() {
		return "Book [isbn=" + isbn + ", name=" + name + "]";
	}
	
	
	
	
	
}

------------------library 


  package org.springcore.demo.model;

import java.util.Arrays;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

//Annotation Based: put annotation on classes to tell spring what to manage
//@component //@service //Repository // Controller 

//java based : use java class insted of xml to define beans manually 
//@configuration @Bean  

public class Library {

	private String libraryName;
	
	@Autowired
	private Book book;
	
	public String getLibraryName() {
		return libraryName;
	}
	public void setLibraryName(String libraryName) {
		this.libraryName = libraryName;
	}
	public Book getBook() {
		return book;
	}
	public void setBook(Book book) {
		this.book = book;
	}
	
	public Library() {
		// TODO Auto-generated constructor stub
	}
	public Library(String libraryName, Book book) {
		super();
		this.libraryName = libraryName;
		this.book = book;
	}
	
	
	public Library(Book book) {
		super();
		this.book = book;
	}
	
	@Override
	public String toString() {
		return "Library [libraryName=" + libraryName + ", book=" + book + "]";
	}
	
	
	
}


--------------------------config
package org.springcore.demo.config;

import org.springcore.demo.model.Book;
import org.springcore.demo.model.Library;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class MyAppConfig {

	@Bean(name="mybook")
	public Book getBook() {
		return new Book(10, "My First WorldCup");
	}
	
	
	@Bean(name="library")
	public Library getLibrary() {
		
		Library library=new Library();
		library.setLibraryName("Central");
		return library; 
	}
	
	
	
}

----------------------------service

  package org.springcore.demo.service;

import org.springcore.demo.config.MyAppConfig;
import org.springcore.demo.model.Book;
import org.springcore.demo.model.Library;
import org.springframework.beans.factory.BeanFactory;
import org.springframework.context.annotation.AnnotationConfigApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class BookService {

	public static void main(String[] args) {
			

		BeanFactory factory=new AnnotationConfigApplicationContext(MyAppConfig.class);
		
		Library library= factory.getBean(Library.class); 
		
		System.out.println(library);
		
	}

}


  

