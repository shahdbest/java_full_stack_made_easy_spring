package org.springcore.demo.model;

import java.util.Arrays;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;

@Component
public class Book {

	
	@Value("99")
	private int isbn;
	@Value("NEW NAME")
	private String name;
	
	

	public Book() {
	
	}



	public int getIsbn() {
		return isbn;
	}



	public void setIsbn(int isbn) {
		System.out.println("setter");
		this.isbn = isbn;
	}



	public String getName() {
		return name;
	}



	public void setName(String name) {
		this.name = name;
	}



	public Book(int isbn, String name) {
		super();
		System.out.println("const");
		this.isbn = isbn;
		this.name = name;
	}



	@Override
	public String toString() {
		return "Book [isbn=" + isbn + ", name=" + name + "]";
	}
	
	
	
	
	
}



------------------library

package org.springcore.demo.model;

import java.util.Arrays;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Component;

import jakarta.annotation.PostConstruct;
import jakarta.annotation.PreDestroy;

//Annotation Based: put annotation on classes to tell spring what to manage
//@component //@service //Repository // Controller 

//java based : use java class insted of xml to define beans manually 
//@configuration @Bean  


@Component
public class Library {

	private String libraryName;
	

	@Autowired
	private Book book;
	
	
	@PostConstruct
	public void init()
	{
		libraryName ="City Central Library";
		book=new Book(900, libraryName);
	System.out.println(libraryName +book);
		System.out.println("init method - Book Initilized");
	}
	
	@PreDestroy
	public void destroy()
	{
		libraryName =null;
		book=null;
	System.out.println(libraryName +book);
		System.out.println("destroy method - Book Destroyed");
	}
	
	
	
	public String getLibraryName() {
		return libraryName;
	}
	public void setLibraryName(String libraryName) {
		this.libraryName = libraryName;
	}
	public Book getBook() {
		return book;
	}
	public void setBook(Book book) {
		this.book = book;
	}
	
	public Library() {
		// TODO Auto-generated constructor stub
	}
	public Library(String libraryName, Book book) {
		super();
		this.libraryName = libraryName;
		this.book = book;
	}
	
	
	public Library(Book book) {
		super();
		this.book = book;
	}
	
	@Override
	public String toString() {
		return "Library [libraryName=" + libraryName + ", book=" + book + "]";
	}
	
	
	
}


